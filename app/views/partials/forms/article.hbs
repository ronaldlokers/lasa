<form action="/article" method="post">
  <div class="form-group">
    <label class="sr-only" for="login-username">Title</label>
    <input type="text" class="form-control" id="article-title" name="title" placeholder="Title" value="{{article.title}}">
  </div>
  <div class="form-group">
    <label class="sr-only" for="article-hyperlink">Hyperlink</label>
    <input type="text" class="form-control" id="article-hyperlink" name="hyperlink" placeholder="Hyperlink" value="{{article.hyperlink}}">
  </div>
  <button type="submit" class="btn btn-default">Add article</button>
</form>
